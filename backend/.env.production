# ===============================================
# PRODUCTION ENVIRONMENT - Live Server
# ===============================================

# Server Configuration
NODE_ENV=production
PORT=5000
API_URL=https://api.yourdomain.com

# Database Configuration
DB_HOST=production-db-host
DB_USER=production_db_user
DB_PASSWORD=production_db_password_secure
DB_NAME=marketplace_jeans
DB_PORT=3306

# JWT Configuration - USE STRONG RANDOM SECRETS!
JWT_SECRET=generate_a_strong_random_secret_here_minimum_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=generate_another_strong_random_secret_here
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS) - Multiple URLs separated by comma
FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com

# Payment Gateway - Midtrans (Production)
MIDTRANS_SERVER_KEY=Mid-server-YOUR_PRODUCTION_KEY
MIDTRANS_CLIENT_KEY=Mid-client-YOUR_PRODUCTION_KEY
MIDTRANS_IS_PRODUCTION=true

# Shipping API
SHIPPING_API_KEY=your_production_shipping_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_app_password

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Currency
DEFAULT_CURRENCY=IDR
