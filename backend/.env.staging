# ===============================================
# STAGING ENVIRONMENT - Testing/Staging Server
# ===============================================

# Server Configuration
NODE_ENV=staging
PORT=5000
API_URL=https://staging-api.yourdomain.com

# Database Configuration
DB_HOST=staging-db-host
DB_USER=staging_db_user
DB_PASSWORD=staging_db_password
DB_NAME=marketplace_jeans_staging
DB_PORT=3306

# JWT Configuration
JWT_SECRET=staging_super_secret_jwt_key_minimum_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=staging_refresh_token_secret_key_minimum_32
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=https://staging.yourdomain.com

# Payment Gateway - Midtrans (Sandbox for Staging)
MIDTRANS_SERVER_KEY=SB-Mid-server-YOUR_STAGING_KEY
MIDTRANS_CLIENT_KEY=SB-Mid-client-YOUR_STAGING_KEY
MIDTRANS_IS_PRODUCTION=false

# Shipping API
SHIPPING_API_KEY=your_staging_shipping_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging-email@yourdomain.com
SMTP_PASSWORD=your_app_password

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Currency
DEFAULT_CURRENCY=IDR
