# Server Configuration
NODE_ENV=production
PORT=5000
API_URL=https://api.yourdomain.com

# Database Configuration
DB_HOST=your-mysql-host
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_NAME=marketplace_jeans
DB_PORT=3306

# JWT Configuration
JWT_SECRET=generate_a_strong_random_secret_here_minimum_32_characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=generate_another_strong_random_secret_here
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS) - Multiple URLs separated by comma
# Include all domains that will access this API
FRONTEND_URL=https://yourdomain.com,https://www.yourdomain.com

# Payment Gateway - Midtrans
MIDTRANS_SERVER_KEY=your_production_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_production_midtrans_client_key
MIDTRANS_IS_PRODUCTION=true

# Shipping API (Optional - for tracking)
SHIPPING_API_KEY=your_shipping_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
